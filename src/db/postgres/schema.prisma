generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  mobile       String?
  name         String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  UploadRecord UploadRecord[]
}

model UploadRecord {
  id        Int      @id @default(autoincrement())
  ossKey    String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model PageViewStatistics {
  id        Int      @id @default(autoincrement())
  path      String
  count     Int      @default(0)
  year      String
  month     String
  day       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
